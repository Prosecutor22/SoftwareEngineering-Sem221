<!DOCTYPE html>
<html lang="en">
<head>
    <link href='https://fonts.googleapis.com/css?family=Nunito' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css' rel='stylesheet'>
    <link href='https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="/css/task_history.css">
</head>
<body>
    <%- include("partials/header"); -%>
    <!-- CONTAINER -->
    <div class="container">
        <!-- navigator -->
        <nav class="sidebar">
            <div class="nav_position">
                <p class="nav_name">MAIN MENU</p>
                <div class="nav_list">
                    <a href="/back-officer/dashboard" class="nav_link active">
                        <i class='bx bx-grid-alt nav_icon'></i>
                        <span>Dashboard</span>
                    </a>
                    <br>
                    <a href="/back-officer/assign-task" class="nav_link active">
                        <i class='bx bx-calendar nav_icon'></i>
                        <span>Task Management</span>
                    </a>
                    <br>
                    <a href="/back-officer/assign-task" class="nav_link active">
                        <i class='bx bx-pencil nav_icon'></i>
                        <span>Assign Task</span>
                    </a>
                    <br>
                    <a href="#" class="nav_link active">
                        <i class='bx bx-data nav_icon'></i>
                        <span>View History</span>
                    </a>
                    <br>
                    <a href="#" class="nav_link active">
                        <i class='bx bx-message-dots nav_icon'></i>
                        <span>Chat</span>
                    </a>
                </div>

                <p class="nav_name">OTHERS</p>
                <div class="nav_list">
                    <a href="#" class="nav_link active">
                        <i class='bx bxs-user-detail nav_icon'></i>
                        <span>Profile</span>
                    </a>
                    <br>
                    <a href="#" class="nav_link active">
                        <i class='bx bx-cog nav_icon'></i>
                        <span>Setting</span>
                    </a>
                </div>
            </div>
        </nav>
        <!-- task history main content -->
        <div class="content">
            <h1>TASK HISTORY</h1>
            <div class="table">
            <table class="history_tb" style="left: 65px">
                <thead>
                    <tr>
                        <th>Week</th>
                        <th>ID</th>
                        <th>Name</th>
                        <th>MCP</th>
                        <th>Troller</th>
                        <th>Route</th>
                        <th>Vehicle</th>
                    </tr>
                </thead>
                <tbody class="table_body">
                    <% rows.forEach(function(row) { %>
                        <tr>
                            <td><%= row.week %></td>
                            <td><%= row.id %></td>
                            <td><%= row.name %></td> 
                            <td><%= row.mcp %></td>
                            <td><%= row.troller %></td>
                            <td><%= row.route %></td>
                            <td><%= row.vehicle %></td>
                        </tr> 
                    <% }); %>
                </tbody>
            </table>
        </div>
        </div>
        <!-- time -->
        <div class="time_navi">
            <div class="dropdown">
                <button type="button" class="dropbtn">Week</button>

                <div class="dropdown-content">
                    <a href="#" class="choosetype a0">ID</a>
                    <a href="#" class="choosetype a1">Name</a>
                    <a href="#" class="choosetype a2">Vehicle</a>
                    <a href="#" class="choosetype a3">Route</a>
                    <a href="#" class="choosetype a4">Troller</a>
                    <a href="#" class="choosetype a5">MCP</a>
                </div>
            </div>
            <form action="">
                <input type="text" id="keyword" name="keyword" placeholder="keyword"><br><br>
                <button class="search" type="button" id="search">   
                    Search   
                </button>
            </form>
        </div>
    </div>
    <!-- <%- include("partials/footer"); -%> -->
    <script src="/js/task-history.js"></script>
</body>
</html>
