<%- include("partials/header"); -%>
    <link href='https://fonts.googleapis.com/css?family=Nunito' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css' rel='stylesheet'>
    <link href='https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <!-- CONTAINER -->
    <div class="container">
        <!-- dashboard main content -->
        <div class="content">
            <h1>DASH BOARD</h1>
            <div class="board">
                <div class="ele">
                    <p class="ele_name">Employee</p>
                    <div class="ele_11 box">
                        <p class="box_content">Collectors</p>
                        <p class="box_count"><%=numCollector%></p>
                    </div>

                    <div class="ele_12 box">
                        <p class="box_content">Janitors</p>
                        <p class="box_count"><%=numJanitor%></p>
                    </div>
                </div>
                <div class="ele">
                    <p class="ele_name">Equipment</p>
                    <div class="ele_21 box">
                        <p class="box_content">Vehicles</p>
                        <p class="box_count"><%=numVehicle%></p>
                    </div>

                    <div class="ele_22 box">
                        <p class="box_content">Trollers</p>
                        <p class="box_count"><%=numTroller%></p>
                    </div>
                </div>
                <div class="ele">
                    <p class="ele_name">Location</p>
                    <div class="ele_31 box">
                        <p class="box_content">MCPs</p>
                        <p class="box_count"><%=numMCP%></p>
                    </div>

                    <div class="ele_32 box">
                        <p class="box_content">Route</p>
                        <p class="box_count"><%=numRoute%></p>
                    </div>
                </div>
            </div>    
        </div>
    </div>
<%- include("partials/footer"); -%>


